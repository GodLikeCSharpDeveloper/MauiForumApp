<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiForumApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiForumApp"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="DarkBlue"
    >
    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        FlyoutItemIsVisible="True"/>
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Grid RowDefinitions="*" ColumnDefinitions="*,*,*,*,8" ColumnSpacing="5" Padding="0, 10, 0, 10">
               
                <ImageButton  Source="burgerite2m.png" Grid.Column="1"></ImageButton>
                <ImageButton  Grid.Column="2"></ImageButton>
                <ImageButton  Grid.Column="3" Grid.ColumnSpan="4"></ImageButton>



            </Grid>
        </HorizontalStackLayout>
    </Shell.TitleView>
</Shell>
